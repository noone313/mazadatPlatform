<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>المزادات الحية - منصة مزادات</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Tajawal:wght@300;400;500;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Tajawal', sans-serif;
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            min-height: 100vh;
        }
        .gradient-bg {
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        }
        .auction-card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            border-radius: 12px;
            overflow: hidden;
        }
        .auction-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
        }
        .countdown-timer {
            background: rgba(0, 0, 0, 0.7);
            color: white;
            padding: 5px 10px;
            border-radius: 20px;
            font-size: 0.9rem;
            display: inline-flex;
            align-items: center;
        }
        .filter-section {
            background: white;
            border-radius: 12px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        }
        .category-badge {
            display: inline-block;
            padding: 5px 12px;
            border-radius: 20px;
            font-size: 0.8rem;
            font-weight: 500;
        }
        .stats-card {
            background: white;
            border-radius: 12px;
            padding: 20px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
            text-align: center;
        }
        .bid-history {
            max-height: 200px;
            overflow-y: auto;
        }
        .view-toggle {
            display: flex;
            border: 1px solid #e5e7eb;
            border-radius: 8px;
            overflow: hidden;
        }
        .view-toggle button {
            padding: 8px 16px;
            background: white;
            border: none;
            cursor: pointer;
            transition: all 0.3s ease;
        }
        .view-toggle button.active {
            background: #3b82f6;
            color: white;
        }
        .grid-view .auction-card {
            margin-bottom: 30px;
        }
        .list-view .auction-item {
            background: white;
            border-radius: 12px;
            margin-bottom: 20px;
            padding: 20px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
            display: flex;
            transition: all 0.3s ease;
        }
        .list-view .auction-item:hover {
            transform: translateX(-5px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        }
        .fab-tooltip {
            position: absolute;
            right: 100%;
            top: 50%;
            transform: translateY(-50%);
            background: rgba(0, 0, 0, 0.7);
            color: white;
            padding: 5px 10px;
            border-radius: 4px;
            font-size: 0.8rem;
            white-space: nowrap;
            margin-right: 10px;
            opacity: 0;
            transition: opacity 0.3s;
            pointer-events: none;
        }
        .fab-menu-item:hover .fab-tooltip {
            opacity: 1;
        }
    </style>
</head>
<body class="gradient-bg">
    <!-- شريط التنقل -->
    <%- include('partials/navbar') %>
    
    <!-- محتوى صفحة المزادات -->
    <main class="max-w-7xl mx-auto px-4 py-8">
        <!-- قسم البحث والتصفية -->
        <section class="mb-8">
            <div class="flex flex-col md:flex-row justify-between items-center mb-6">
                <div>
                    <h1 class="text-3xl font-bold text-gray-800">المزادات الحية</h1>
                    <p class="text-gray-600 mt-2">اكتشف أفضل الصفقات في آلاف المزادات النشطة</p>
                </div>
                <div class="mt-4 md:mt-0 flex items-center space-x-4">
                    <div class="view-toggle">
                        <button class="active" id="gridViewBtn"><i class="fas fa-th-large"></i></button>
                        <button id="listViewBtn"><i class="fas fa-list"></i></button>
                    </div>
                    <div class="text-sm text-gray-600">
                        <span id="auctionsCount"><%= totalAuctions %></span> مزاد نشط
                    </div>
                </div>
            </div>

            <div class="filter-section p-6 mb-6">
                <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">بحث</label>
                        <div class="relative">
                            <input type="text" placeholder="ابحث عن مزاد..." class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                            <i class="fas fa-search absolute left-3 top-3 text-gray-400"></i>
                        </div>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">الفئة</label>
                        <select class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                            <option value="">جميع الفئات</option>
                            <option value="cars">سيارات</option>
                            <option value="realestate">عقارات</option>
                            <option value="electronics">إلكترونيات</option>
                            <option value="jewelry">مجوهرات</option>
                            <option value="art">فنون</option>
                        </select>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">السعر</label>
                        <select class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                            <option value="">أي سعر</option>
                            <option value="0-1000">أقل من 1,000 د.ع</option>
                            <option value="1000-5000">1,000 - 5,000 د.ع</option>
                            <option value="5000-10000">5,000 - 10,000 د.ع</option>
                            <option value="10000-50000">10,000 - 50,000 د.ع</option>
                            <option value="50000+">أكثر من 50,000 د.ع</option>
                        </select>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">الترتيب</label>
                        <select class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                            <option value="ending">ينتهي قريباً</option>
                            <option value="newest">الأحدث</option>
                            <option value="price-low">السعر: من الأقل للأعلى</option>
                            <option value="price-high">السعر: من الأعلى للأقل</option>
                        </select>
                    </div>
                </div>
            </div>
        </section>

        <!-- إحصائيات سريعة -->
        <section class="mb-8">
            <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                <div class="stats-card">
                    <i class="fas fa-gavel text-3xl text-blue-500 mb-2"></i>
                    <h3 class="text-xl font-bold"><%= stats.activeAuctions.toLocaleString() %></h3>
                    <p class="text-gray-600">مزاد نشط</p>
                </div>
                <div class="stats-card">
                    <i class="fas fa-users text-3xl text-green-500 mb-2"></i>
                    <h3 class="text-xl font-bold"><%= stats.totalUsers.toLocaleString() %></h3>
                    <p class="text-gray-600">مستخدم نشط</p>
                </div>
                <div class="stats-card">
                    <i class="fas fa-trophy text-3xl text-yellow-500 mb-2"></i>
                    <h3 class="text-xl font-bold"><%= stats.endedAuctions.toLocaleString() %></h3>
                    <p class="text-gray-600">مزاد منتهي</p>
                </div>
                <div class="stats-card">
                    <i class="fas fa-chart-line text-3xl text-purple-500 mb-2"></i>
                    <h3 class="text-xl font-bold"><%= (stats.totalSales / 1000000).toFixed(1) %>M</h3>
                    <p class="text-gray-600">قيمة المبيعات</p>
                </div>
            </div>
        </section>

        <!-- عرض المزادات (وضع الشبكة) -->
        <section id="auctionsGrid" class="grid-view">
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <% if (auctions && auctions.length > 0) { %>
                    <% auctions.forEach(auction => { %>
                        <div class="auction-card bg-white rounded-xl shadow-md overflow-hidden">
                            <div class="relative">
                                <img src="<%= auction.main_image %>" alt="<%= auction.title %>" class="w-full h-48 object-cover">
                                <div class="absolute top-4 right-4">
                                    <span class="category-badge bg-blue-100 text-blue-800">
                                        <%= auction.Category ? auction.Category.name : 'عام' %>
                                    </span>
                                </div>
                                <div class="absolute top-4 left-4 countdown-timer">
                                    <i class="far fa-clock mr-1"></i>
                                    <span class="countdown" data-endtime="<%= auction.end_time %>"><%= auction.time_left %></span>
                                </div>
                            </div>
                            <div class="p-6">
                                <h3 class="text-xl font-bold text-gray-800 mb-2"><%= auction.title %></h3>
                                <p class="text-gray-600 mb-4"><%= auction.description ? auction.description.substring(0, 100) + '...' : 'لا يوجد وصف' %></p>
                                <div class="flex justify-between items-center mb-4">
                                    <div>
                                        <p class="text-sm text-gray-500">السعر الحالي</p>
                                        <p class="text-lg font-bold text-blue-600">
                                            <%= auction.current_price ? auction.current_price.toLocaleString() : auction.start_price.toLocaleString() %> د.ع
                                        </p>
                                    </div>
                                    <div class="text-right">
                                        <p class="text-sm text-gray-500">عدد المزايدات</p>
                                        <p class="text-lg font-bold text-gray-800"><%= auction.bids_count %></p>
                                    </div>
                                </div>
                                <div class="flex justify-between items-center">
                                    <div class="flex items-center text-sm text-gray-500">
                                        <i class="fas fa-user mr-1"></i>
                                        <span><%= auction.Seller ? auction.Seller.full_name : 'مستخدم' %></span>
                                    </div>
                                    <a href="/auctions/<%= auction.auction_id %>" class="bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition duration-300">
                                        المزايدة الآن
                                    </a>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                <% } else { %>
                    <div class="col-span-3 text-center py-12">
                        <i class="fas fa-gavel text-4xl text-gray-300 mb-4"></i>
                        <h3 class="text-xl font-bold text-gray-700 mb-2">لا توجد مزادات حالياً</h3>
                        <p class="text-gray-500">لم يتم إنشاء أي مزادات بعد</p>
                    </div>
                <% } %>
            </div>
        </section>

        <!-- عرض المزادات (وضع القائمة) - مخفي افتراضيًا -->
        <section id="auctionsList" class="list-view hidden">
            <% if (auctions && auctions.length > 0) { %>
                <% auctions.forEach(auction => { %>
                    <div class="auction-item">
                        <div class="w-1/4 mr-4">
                            <img src="<%= auction.main_image %>" alt="<%= auction.title %>" class="w-full h-32 object-cover rounded-lg">
                        </div>
                        <div class="flex-1">
                            <div class="flex justify-between items-start">
                                <div>
                                    <h3 class="text-xl font-bold text-gray-800"><%= auction.title %></h3>
                                    <p class="text-gray-600 mt-1"><%= auction.description ? auction.description.substring(0, 150) + '...' : 'لا يوجد وصف' %></p>
                                </div>
                                <div class="text-right">
                                    <span class="category-badge bg-blue-100 text-blue-800">
                                        <%= auction.Category ? auction.Category.name : 'عام' %>
                                    </span>
                                    <div class="countdown-timer mt-2">
                                        <i class="far fa-clock mr-1"></i>
                                        <span class="countdown" data-endtime="<%= auction.end_time %>"><%= auction.time_left %></span>
                                    </div>
                                </div>
                            </div>
                            <div class="flex justify-between items-center mt-4">
                                <div>
                                    <p class="text-sm text-gray-500">السعر الحالي</p>
                                    <p class="text-lg font-bold text-blue-600">
                                        <%= auction.current_price ? auction.current_price.toLocaleString() : auction.start_price.toLocaleString() %> د.ع
                                    </p>
                                </div>
                                <div>
                                    <p class="text-sm text-gray-500">عدد المزايدات</p>
                                    <p class="text-lg font-bold text-gray-800"><%= auction.bids_count %></p>
                                </div>
                                <div class="flex items-center text-sm text-gray-500">
                                    <i class="fas fa-user mr-1"></i>
                                    <span><%= auction.Seller ? auction.Seller.full_name : 'مستخدم' %></span>
                                </div>
                                <a href="/auctions/<%= auction.auction_id %>" class="bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition duration-300">
                                    المزايدة الآن
                                </a>
                            </div>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <div class="text-center py-8">
                    <i class="fas fa-gavel text-4xl text-gray-300 mb-4"></i>
                    <h3 class="text-xl font-bold text-gray-700 mb-2">لا توجد مزادات حالياً</h3>
                    <p class="text-gray-500">لم يتم إنشاء أي مزادات بعد</p>
                </div>
            <% } %>
        </section>

        <!-- ترقيم الصفحات -->
        <% if (totalPages > 1) { %>
            <section class="mt-12 flex justify-center">
                <nav class="flex items-center space-x-2">
                    <% if (page > 1) { %>
                        <a href="?page=<%= page - 1 %>" class="px-3 py-2 rounded-lg bg-white text-gray-700 font-medium hover:bg-gray-100">
                            <i class="fas fa-chevron-right"></i>
                        </a>
                    <% } %>
                    
                    <% for (let i = 1; i <= totalPages; i++) { %>
                        <% if (i === page) { %>
                            <a href="#" class="px-3 py-2 rounded-lg bg-blue-600 text-white font-medium"><%= i %></a>
                        <% } else { %>
                            <a href="?page=<%= i %>" class="px-3 py-2 rounded-lg bg-white text-gray-700 font-medium hover:bg-gray-100"><%= i %></a>
                        <% } %>
                    <% } %>
                    
                    <% if (page < totalPages) { %>
                        <a href="?page=<%= page + 1 %>" class="px-3 py-2 rounded-lg bg-white text-gray-700 font-medium hover:bg-gray-100">
                            <i class="fas fa-chevron-left"></i>
                        </a>
                    <% } %>
                </nav>
            </section>
        <% } %>
    </main>

    <!-- تذييل الصفحة -->
    <%- include('partials/footer') %>

    <!-- زر إنشاء مزاد جديد العائم -->
    <% if (user) { %>
        <div class="fixed bottom-8 right-8 z-50">
            <!-- زر الفعل الرئيسي -->
            <button id="createAuctionFab" class="w-14 h-14 bg-blue-600 hover:bg-blue-700 text-white rounded-full shadow-lg flex items-center justify-center transition-all duration-300 transform hover:scale-110">
                <i class="fas fa-plus text-xl"></i>
            </button>
            
            <!-- القائمة المنبثقة -->
            <div id="fabMenu" class="absolute bottom-16 right-0 mb-2 hidden flex-col space-y-3">
                <a href="/create-auction" class="fab-menu-item bg-white text-gray-800 rounded-full shadow-md p-3 flex items-center justify-center w-12 h-12 hover:bg-gray-100 transition-all duration-300 transform hover:scale-105 relative">
                    <i class="fas fa-gavel"></i>
                    <span class="fab-tooltip">إنشاء مزاد جديد</span>
                </a>
                <a href="/profile" class="fab-menu-item bg-white text-gray-800 rounded-full shadow-md p-3 flex items-center justify-center w-12 h-12 hover:bg-gray-100 transition-all duration-300 transform hover:scale-105 relative">
                    <i class="fas fa-list"></i>
                    <span class="fab-tooltip">ملفي الشخصي</span>
                </a>
            </div>
        </div>
    <% } %>

    <script>
        // تبديل بين وضع الشبكة ووضع القائمة
        document.getElementById('gridViewBtn').addEventListener('click', function() {
            document.getElementById('auctionsGrid').classList.remove('hidden');
            document.getElementById('auctionsList').classList.add('hidden');
            document.getElementById('gridViewBtn').classList.add('active');
            document.getElementById('listViewBtn').classList.remove('active');
        });

        document.getElementById('listViewBtn').addEventListener('click', function() {
            document.getElementById('auctionsGrid').classList.add('hidden');
            document.getElementById('auctionsList').classList.remove('hidden');
            document.getElementById('gridViewBtn').classList.remove('active');
            document.getElementById('listViewBtn').classList.add('active');
        });

        // عدّاد تنازلي حقيقي
        function updateCountdowns() {
            const countdowns = document.querySelectorAll('.countdown');
            countdowns.forEach(countdown => {
                const endTime = new Date(countdown.getAttribute('data-endtime')).getTime();
                const now = new Date().getTime();
                const distance = endTime - now;

                if (distance <= 0) {
                    countdown.textContent = '00:00:00';
                    // يمكن إضافة إجراء إضافي عند انتهاء الوقت
                    return;
                }

                const hours = Math.floor(distance / (1000 * 60 * 60));
                const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
                const seconds = Math.floor((distance % (1000 * 60)) / 1000);

                countdown.textContent = 
                    (hours < 10 ? '0' + hours : hours) + ':' + 
                    (minutes < 10 ? '0' + minutes : minutes) + ':' + 
                    (seconds < 10 ? '0' + seconds : seconds);
            });
        }

        // تحديث العدادات كل ثانية
        setInterval(updateCountdowns, 1000);
        updateCountdowns(); // التشغيل الأولي

        // التحكم في زر إنشاء المزاد العائم
        const createAuctionFab = document.getElementById('createAuctionFab');
        if (createAuctionFab) {
            createAuctionFab.addEventListener('click', function() {
                const menu = document.getElementById('fabMenu');
                menu.classList.toggle('hidden');
                
                // تدوير الأيقونة عند فتح/إغلاق القائمة
                this.querySelector('i').classList.toggle('rotate-45');
            });

            // إغلاق القائمة عند النقر خارجها
            document.addEventListener('click', function(event) {
                const fab = document.getElementById('createAuctionFab');
                const menu = document.getElementById('fabMenu');
                
                if (fab && menu && !fab.contains(event.target) && !menu.contains(event.target)) {
                    menu.classList.add('hidden');
                    fab.querySelector('i').classList.remove('rotate-45');
                }
            });
        }

        // إضافة تأثيرات الظهور التدريجي
        document.addEventListener('DOMContentLoaded', function() {
            const cards = document.querySelectorAll('.auction-card, .stats-card');
            cards.forEach((card, index) => {
                card.style.opacity = '0';
                card.style.transform = 'translateY(20px)';
                
                setTimeout(() => {
                    card.style.transition = 'opacity 0.6s ease, transform 0.6s ease';
                    card.style.opacity = '1';
                    card.style.transform = 'translateY(0)';
                }, index * 100);
            });
        });
    </script>
</body>
</html>