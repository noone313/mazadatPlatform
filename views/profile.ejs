    function updateRecentActivity(activity) {
        const activityContainer = document.querySelector('.space-y-4');
        if (activity.length === 0) {
            activityContainer.innerHTML = `
                <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-4 text-center">
                    <p class="text-gray-500">لا يوجد نشاط حديث</p>
                </div>
            `;
            return;
        }

        activityContainer.innerHTML = activity.map(item => `
            <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-4">
                <div class="flex items-start">
                    <div class="w-10 h-10 ${getActivityColor(item.type)} rounded-full flex items-center justify-center ml-3 flex-shrink-0">
                        <i class="${getActivityIcon(item.type)}"></i>
                    </div>
                    <div>
                        <p class="font-medium text-gray-800">${item.message}</p>
                        <p class="text-gray-600 text-sm">${item.details}</p>
                        <p class="text-gray-500 text-xs">${item.time}</p>
                    </div>
                </div>
            </div>
        `).join('');
    }

    function getActivityColor(type) {
        const colors = {
            'create': 'bg-blue-100',
            'bid': 'bg-purple-100',
            'win': 'bg-green-100'
        };
        return colors[type] || 'bg-gray-100';
    }

    function getActivityIcon(type) {
        const icons = {
            'create': 'fas fa-gavel text-blue-600',
            'bid': 'fas fa-hand-holding-usd text-purple-600',
            'win': 'fas fa-trophy text-green-600'
        };
        return icons[type] || 'fas fa-bell text-gray-600';
    }
