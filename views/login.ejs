<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>تسجيل الدخول - منصة مزادات</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Tajawal:wght@300;400;500;700&display=swap" rel="stylesheet">
    <style>
        body { font-family: 'Tajawal', sans-serif; background: linear-gradient(135deg,#f5f7fa 0%,#c3cfe2 100%); min-height:100vh; display:flex; flex-direction:column; }
        .form-container { background:white; border-radius:12px; box-shadow:0 10px 30px rgba(0,0,0,0.1); }
        .input-group { position:relative; margin-bottom:1.5rem; }
        .input-group i { position:absolute; left:15px; top:50%; transform:translateY(-50%); color:#6b7280; }
        .input-group input { padding-right:15px; padding-left:45px; }
        .password-toggle { position:absolute; left:15px; top:50%; transform:translateY(-50%); cursor:pointer; color:#6b7280; }
        .feedback-message {
            position: fixed;
            top: 20px;
            right: 50%;
            transform: translateX(50%);
            z-index: 999;
            padding:12px 20px;
            border-radius:8px;
            display:flex;
            align-items:center;
            gap:10px;
            font-weight:500;
            min-width: 280px;
            justify-content: center;
        }
        .feedback-message.error { background:#fef2f2; color:#dc2626; border:1px solid #fecaca; }
        .feedback-message.success { background:#f0f9ff; color:#0369a1; border:1px solid #bae6fd; }
    </style>
</head>
<body class="gradient-bg">
    <%- include('partials/navbar') %>

    <!-- رسائل التغذية الراجعة ثابتة -->
    <div id="feedbackMessage" class="feedback-message" style="display:none;">
        <i id="feedbackIcon" class="fas mr-2"></i>
        <span id="feedbackText"></span>
    </div>

    <!-- محتوى صفحة تسجيل الدخول -->
    <main class="flex-grow flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
        <div class="max-w-md w-full form-container p-8">
            <div class="text-center mb-8">
                <h2 class="text-3xl font-bold text-gray-800">تسجيل الدخول</h2>
                <p class="text-gray-600 mt-2">مرحباً بعودتك إلى منصة المزادات</p>
            </div>

            <form class="mt-8 space-y-6" action="/users/login" method="POST" id="loginForm">
                <!-- البريد الإلكتروني -->
                <div class="input-group">
                    <i class="fas fa-envelope"></i>
                    <input id="email-address" name="email" type="email" autocomplete="email" required 
                           class="appearance-none rounded-lg relative block w-full px-3 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-blue-500 focus:border-blue-500 focus:z-10"
                           placeholder="البريد الإلكتروني">
                </div>

                <!-- كلمة المرور -->
                <div class="input-group">
                    <i class="fas fa-lock"></i>
                    <input id="password" name="password" type="password" autocomplete="current-password" required 
                           class="appearance-none rounded-lg relative block w-full px-3 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-blue-500 focus:border-blue-500 focus:z-10"
                           placeholder="كلمة المرور">
                    <span class="password-toggle" onclick="togglePassword('password')">
                        <i class="far fa-eye"></i>
                    </span>
                </div>

                <!-- تذكرني ونسيت كلمة المرور -->
                <div class="flex items-center justify-between">
                    <div class="flex items-center">
                        <input id="remember-me" name="remember_me" type="checkbox" 
                               class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded ml-2">
                        <label for="remember-me" class="text-sm text-gray-700">تذكرني</label>
                    </div>
                    <div class="text-sm">
                        <a href="/forgot-password" class="font-medium text-blue-600 hover:text-blue-500">نسيت كلمة المرور؟</a>
                    </div>
                </div>

                <!-- زر تسجيل الدخول -->
                <div>
                    <button type="submit" 
                            class="group relative w-full flex justify-center py-3 px-4 border border-transparent text-sm font-medium rounded-lg text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition duration-300">
                        تسجيل الدخول
                    </button>
                </div>

                <!-- رابط إنشاء حساب -->
                <div class="text-center">
                    <span class="text-gray-600">ليس لديك حساب؟</span>
                    <a href="/register" class="font-medium text-blue-600 hover:text-blue-500 mr-1">إنشاء حساب جديد</a>
                </div>
            </form>
        </div>
    </main>

    <%- include('partials/footer') %>

    <script>
        // إظهار/إخفاء كلمة المرور
        function togglePassword(fieldId) {
            const field = document.getElementById(fieldId);
            const icon = field.nextElementSibling.querySelector('i');
            if(field.type === 'password'){ field.type='text'; icon.classList.replace('fa-eye','fa-eye-slash'); }
            else { field.type='password'; icon.classList.replace('fa-eye-slash','fa-eye'); }
        }

        let feedbackTimeout;

    // عرض رسالة
    function showFeedback(message, type='error'){
        const msg = document.getElementById('feedbackMessage');
        const icon = document.getElementById('feedbackIcon');
        const text = document.getElementById('feedbackText');

        // إزالة أي وقت سابق لإخفاء الرسالة
        if(feedbackTimeout) clearTimeout(feedbackTimeout);

        msg.classList.remove('error','success');
        msg.classList.add(type);
        icon.className = type==='error' ? 'fas fa-exclamation-circle mr-2' : 'fas fa-check-circle mr-2';
        text.textContent = message;
        msg.style.display = 'flex';

        // إخفاء الرسالة بعد 7 ثوانٍ
        feedbackTimeout = setTimeout(() => {
            msg.style.display = 'none';
        }, 7000);
    }

    // التحقق من الحقول قبل الإرسال
    document.getElementById('loginForm').addEventListener('submit', function(e){
        const email = document.getElementById('email-address').value.trim();
        const password = document.getElementById('password').value.trim();

        if(!email || !password){
            e.preventDefault();
            showFeedback('يرجى ملء جميع الحقول المطلوبة', 'error');
            return;
        }

        const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
        if(!emailRegex.test(email)){
            e.preventDefault();
            showFeedback('يرجى إدخال بريد إلكتروني صحيح', 'error');
            return;
        }

        this.submit();
    });

   // الحصول على الـ query string
const urlParams = new URLSearchParams(window.location.search);

// رسالة نجاح التسجيل
if (urlParams.get('registered') === 'success') {
    showFeedback('تم إنشاء الحساب بنجاح! يمكنك تسجيل الدخول الآن.', 'success');
}

// رسالة خطأ
if (urlParams.get('error') === 'invalid') {
    showFeedback('حدث خطأ يرجى إعادة المحاولة.', 'error');
}

    </script>
</body>
</html>
